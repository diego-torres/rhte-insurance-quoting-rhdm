package com.myteam.quote;

rule "create quote"
 dialect "mvel"
 when
     not(exists Quote())
 then
    Quote quote = new Quote();
     insert (quote)
end

//from row number: 1
//young
rule "Row 1 quoting"
	dialect "mvel"
	when
		f1 : driver( age > 18 , age <= 25 )
		quote: Quote()
	then
		modify(quote){ price = quote.price +100};
end

